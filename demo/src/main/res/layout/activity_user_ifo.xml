<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <variable
            name="nick"
            type="String"/>
        <variable
            name="id"
            type="String"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user_header"
            style="@style/Item.ThreeRow"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_user_header"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/iv_user_ma"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/app_right_arrow"/>

            <ImageView
                android:id="@+id/iv_user_rqcode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_image"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/iv_user_ma" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/line"/>

        <RelativeLayout
            android:id="@+id/rl_user_nick"
            style="@style/Item.SingleRow"
            android:clickable="true">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_user_nick"
                android:textColor="@android:color/black"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_right_nick"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/app_right_arrow"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_user_name"
                android:textColor="@android:color/darker_gray"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_right_nick"
                android:textSize="15sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/line"/>

        <RelativeLayout
            android:id="@+id/rl_user_id"
            style="@style/Item.SingleRow"
            android:clickable="true">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_user_id"
                android:textColor="@android:color/black"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_right_id"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/app_right_arrow"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_user_id"
                android:textColor="@android:color/darker_gray"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_right_id"
                android:textSize="10sp"/>

        </RelativeLayout>


    </LinearLayout>

</layout>
