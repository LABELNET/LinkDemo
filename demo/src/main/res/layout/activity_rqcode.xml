<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="id"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_text_c"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_vertical_margin"
                android:text="@string/rqcode_title"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/iv_rqcode_close"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:src="@mipmap/app_close_arrow"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_round_no_white"
            android:gravity="center_horizontal"
            android:padding="30dp"
            android:layout_margin="50dp">

            <ImageView
                android:id="@+id/iv_rq_code"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/default_rqcode_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:layout_marginTop="20dp"
                android:text="@string/default_user_id"/>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting_my_qrcode3x"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rqcode_sao"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="18sp"/>

    </LinearLayout>
</layout>