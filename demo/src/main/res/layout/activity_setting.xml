<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="name"
            type="String"/>
        <variable
            name="id"
            type="String"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_user_ifo"
                style="@style/Item.ThreeRow"
                android:background="@drawable/back_selector_gray"
                android:clickable="true"
                >

                <ImageView
                    android:id="@+id/iv_user_header"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/default_image"
                    android:background="@drawable/border_yes_round"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/iv_user_header"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:text="@string/default_user_name"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/iv_user_header"
                        android:layout_below="@+id/tv_user_name">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:background="@drawable/border_no_round"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:text="@string/setting_user_id"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="@string/default_user_id"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="5dp"
                            android:textSize="8sp"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_user_ma"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>

                <ImageView
                    android:id="@+id/iv_user_rqcode"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/setting_my_qrcode3x"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@+id/iv_user_ma" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_user_safety"
                style="@style/Item.SingleRow"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_selector_gray"
                android:clickable="true">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_user_safety"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/setting_secret"
                style="@style/Item.SingleRow"
                android:background="@drawable/back_selector_gray"
                android:clickable="true">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_secret"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/setting_general"
                style="@style/Item.SingleRow"
                android:background="@drawable/back_selector_gray"
                android:clickable="true">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_general"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_help"
                style="@style/Item.SingleRow"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_selector_gray"
                android:clickable="true">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_help"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/setting_about"
                style="@style/Item.SingleRow"
                android:background="@drawable/back_selector_gray"
                android:clickable="true">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_about"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>
            </RelativeLayout>

            <Button
                android:id="@+id/setting_user_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_single_row"
                android:background="@drawable/back_selector_black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/setting_user_out"
                android:textColor="@color/white"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>
