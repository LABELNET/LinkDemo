<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/Item.ThreeRow">

                <ImageView
                    android:id="@+id/iv_user_header"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/default_image"
                    android:background="@drawable/border_yes_round"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/iv_user_header"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:text="@string/default_user_name"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/iv_user_header"
                        android:layout_below="@+id/tv_user_name">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:background="@drawable/border_no_round"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:text="@string/setting_user_id"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="@string/default_user_id"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="5dp"
                            android:textSize="8sp"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_user_ma"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/app_right_arrow"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/setting_my_qrcode3x"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@+id/iv_user_ma" />

            </RelativeLayout>


            <RelativeLayout
                style="@style/Item.SingleRow"
                android:layout_marginTop="20dp">

            </RelativeLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>
